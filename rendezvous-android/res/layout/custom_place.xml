<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:scrollbars="horizontal|vertical" android:layout_height="fill_parent"
	android:fillViewport="true" android:layout_width="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:text="Venue Name:" />

		<EditText android:id="@+id/venueTitle" android:layout_width="fill_parent"
			android:singleLine="true" android:layout_height="wrap_content"
			android:hint="Venue Name" />

		<TextView android:layout_width="wrap_content"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:text="Address" />

		<EditText android:id="@+id/venueAddress"
			android:layout_width="fill_parent" android:singleLine="false"
			android:layout_height="wrap_content"
			android:hint="Venue Address(Optional)" />

		<TextView android:layout_width="wrap_content"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:text="City, State" />

		<EditText android:id="@+id/venueCity"
			android:layout_width="fill_parent" android:singleLine="false"
			android:layout_height="wrap_content"
			android:hint="Optional" 
			/>

		<Button android:id="@+id/venueOk"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:text="Save" />

	</LinearLayout>
</ScrollView>